<profile version="1">

  <!-- platforms - Used to define which keys to map for each action based on the platform that is in use -->
  <platforms>
    <PC keyboard="1" xboxpad="1" ps4pad="1" androidkey="0"/>
    <Xbox keyboard="1" xboxpad="1" ps4pad="0" androidkey="0"/>
    <PS4 keyboard="1" xboxpad="0" ps4pad="1" androidkey="0"/>
  </platforms>

  <!-- default - Default action key mappings -->
  <actionmap name="default">
  </actionmap>

  <actionmap name="player">
    <!-- USER DEFINED -->

    <!-- USED INTERNALLY - DO NOT REMOVE -->
    <action name="moveleft" onHeld="1" onPress="1" onRelease="1" retriggerable="1" keyboard="a"/>
    <action name="moveright" onHeld="1" onPress="1" onRelease="1" retriggerable="1" keyboard="d"/>
    <action name="moveforward" onHeld="1" onPress="1" onRelease="1" retriggerable="1" keyboard="w"/>
    <action name="moveback" onHeld="1" onPress="1" onRelease="1" retriggerable="1" keyboard="s"/>
    <action name="moveup" onHeld="1" onPress="1" onRelease="1" retriggerable="1" keyboard="q"/>
    <action name="movedown" onHeld="1" onPress="1" onRelease="1" retriggerable="1" keyboard="z"/>
    <action name="boost" keyboard="lshift" onPress="1" onRelease="1" xboxpad="xi_y" ps4pad="pad_triangle" />
    <action name="jump" keyboard="space" xboxpad="xi_a" ps4pad="pad_cross" onPress="1" />
    <action name="use" keyboard="e" onPress="1" xboxpad="xi_x" ps4pad="pad_square" />
    <action name="rotateyaw" keyboard="maxis_x" />
    <action name="rotatepitch" keyboard="maxis_y" />
    <action name="xi_movey" xboxpad="xi_thumbly" ps4pad="pad_stickly" />
    <action name="xi_movex" xboxpad="xi_thumblx" ps4pad="pad_sticklx" />
    <action name="xi_rotateyaw" xboxpad="xi_thumbrx" ps4pad="pad_stickrx" />
    <action name="xi_rotatepitch" xboxpad="xi_thumbry" ps4pad="pad_stickry" />
  </actionmap>
  
  <actionmap name="menu">
    <action name="connect" xboxpad="xi_b" ps4pad="pad_circle" onPress="1" />
    <action name="refresh" xboxpad="xi_y" ps4pad="pad_triangle" onPress="1" />
    <action name="create" xboxpad="xi_x" ps4pad="pad_square" onPress="1" />
  </actionmap>

</profile>
